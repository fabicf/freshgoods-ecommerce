@page
@model FreshGoods.Pages.Admin.Promotions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Promotion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Promotion.Id" />
            <div class="form-group">
                <label asp-for="Promotion.ItemId" class="control-label"></label>
                <input asp-for="Promotion.ItemId" class="form-control" />
                <span asp-validation-for="Promotion.ItemId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Promotion.Type" /> @Html.DisplayNameFor(model => model.Promotion.Type)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.StartDate" class="control-label"></label>
                <input asp-for="Promotion.StartDate" class="form-control" />
                <span asp-validation-for="Promotion.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.EndDate" class="control-label"></label>
                <input asp-for="Promotion.EndDate" class="form-control" />
                <span asp-validation-for="Promotion.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
