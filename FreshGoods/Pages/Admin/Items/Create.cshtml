@page
@model FreshGoods.Pages.Admin.Items.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.ItemName" class="control-label"></label>
                <input asp-for="Item.ItemName" class="form-control" />
                <span asp-validation-for="Item.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.CategoryId" class="control-label">Category</label>
                <select asp-for="Item.CategoryId">
                    <option value="1">Fruits</option>
                    <option value="2">Meats</option>
                    <option value="3">Vegetables</option>
                    <option value="4">Bakery</option>
                </select>
                <span asp-validation-for="Item.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Price" class="control-label"></label>
                <input type="number" asp-for="Item.Price" class="form-control" />
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Quantity" class="control-label"></label>
                <input type="number" asp-for="Item.Quantity" class="form-control" />
                <span asp-validation-for="Item.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Unit" class="control-label"></label>
                <input asp-for="Item.Unit" class="form-control" />
                <span asp-validation-for="Item.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Item.ImagePath"/>
                <input type="file" asp-for="Upload" onchange="newPhoto(event)" accept="image/*" />
                <img id="visPic" class="d-none" src="#" alt="Item picture" width="200">
                <div>
                    <span asp-for="imageExist" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
<script>
    function newPhoto(event) {
        if (event.target.value) {
            var image = document.getElementById("visPic");
            $("#visPic").removeClass("d-none");
            image.src = URL.createObjectURL(event.target.files[0]);
            $("#Item_ImagePath").text("Exists");
        }

    };
</script>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}
