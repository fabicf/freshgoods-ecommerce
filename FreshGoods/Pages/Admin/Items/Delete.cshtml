@page
@model FreshGoods.Pages.Admin.Items.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
             @if (@Model.Item.CategoryId == 1)
                                {
                                    <div>Fruits </div> 
                                }
                                @if (@Model.Item.CategoryId == 2)
                                {
                                    <div>Meats </div>
                                }
                                @if (@Model.Item.CategoryId == 3)
                                {
                                    <div>Vegetables </div>
                                }
                                @if (@Model.Item.CategoryId == 4)
                                {
                                    <div>Bakery</div>
                                }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Unit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Unit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ImagePath)
        </dt>
        <dd class="col-sm-10">
            <img id="visPic" src="~/Images/@Model.Item.ImagePath" alt="Item picture" width="200">
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Item.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
