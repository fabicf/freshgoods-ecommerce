@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
    integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

<body>
    <div class="main-content">

        <!----------------------- start carrousel -------------------------->
        <div class="carrousel-deals">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="./images/car-1.jpeg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="h5-carousel">Order your fresh food online conveniently delivered to your home
                            </h5>
                            @* <p>You can buy local and that's kind of same thing</p> *@

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="./images/car-6.jpeg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="h5-carousel">We are committed to provide you with fresh fruits and vegetables
                                available at all times</h5>
                            @* <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p> *@
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="./images/car-4.jpeg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="h5-carousel">A diversity of fruits, vegetables, meat and bakery products</h5>
                            @* <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p> *@
                        </div>

                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
        <!----------------------- end carrousel -------------------------->
        <div>
            <h2 class="text-center featured-title">Featured products</h2>
        </div>

        <!----------------------- start random cards -------------------------->
        <section class="services">

            <div class="section-center d-flex justify-content-between row">
                <!-- single card 1 -->
                @foreach (var item in Model.Items)
                {
                    <article class="service-card ">
                        <div class="service-img-container">
                            <img src="~/Images/@item.ImagePath" class="service-img" alt="single service" />
                            <span class="service-icon">
                                @if (@item.CategoryId == 1)
                                {
                                    <i class="fas fa-lemon card-icon"></i>
                                }
                                @if (@item.CategoryId == 2)
                                {
                                    <i class="fas fa-drumstick-bite card-icon"></i>
                                }
                                @if (@item.CategoryId == 3)
                                {
                                    <i class="fas fa-carrot card-icon"></i>
                                }
                                @if (@item.CategoryId == 4)
                                {
                                    <i class="fas fa-bread-slice card-icon"></i>
                                }
                            </span>
                        </div>
                        <div class="service-info">
                            <h5>@item.ItemName </h5>
                            <p>
                                $ @item.Price <span>@item.Unit</span>
                            </p>
                            <div class="col-auto mt-3">
                                <a class="btn btn-success" asp-page="cart" asp-page-handler="buynow"
                                asp-route-id="@item.Id">Buy Item</a>
                            </div>
                        </div>
                    </article>
                }

            </div>
        </section>
        @* <!----------------------- End of random cards --------------------------> *@

        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
</body>